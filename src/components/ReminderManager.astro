// src/components/ReminderManager.astro
// Componente mejorado para gesti√≥n de recordatorios
---

<div class="reminder-manager">
  <button id="toggle-reminder-section" class="reminder-compact-toggle collapsed" aria-label="Recordatorios" title="Gestionar recordatorios">
    <span class="reminder-icon">‚è∞</span>
    <svg class="toggle-arrow" width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
      <path d="M4 6l4 4 4-4H4z"/>
    </svg>
  </button>

  <div id="reminder-content" class="reminder-content collapsed">
    <!-- Quick Actions -->
    <div class="quick-reminders">
      <button class="quick-btn" data-minutes="10">
        <span class="icon">üïê</span>
        <span>10 min</span>
      </button>
      <button class="quick-btn" data-minutes="30">
        <span class="icon">üïú</span>
        <span>30 min</span>
      </button>
      <button class="quick-btn" data-minutes="60">
        <span class="icon">üïê</span>
        <span>1 hora</span>
      </button>
      <button class="quick-btn" data-minutes="480">
        <span class="icon">üåô</span>
        <span>8 horas</span>
      </button>
    </div>

    <!-- Custom Time -->
    <form id="custom-reminder-form" class="custom-reminder-form">
      <select id="reminder-type" name="type" class="type-select">
        <option value="morning">üåÖ Ma√±ana</option>
        <option value="evening">üåô Noche</option>
        <option value="custom">‚è∞ Personalizado</option>
      </select>
      <div class="input-group">
        <label for="reminder-time" class="input-label">Hora:</label>
        <input 
          type="time" 
          id="reminder-time" 
          name="time"
          class="time-input"
          required
        />
      </div>
      <button type="submit" class="add-btn">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M8 0a1 1 0 011 1v6h6a1 1 0 110 2H9v6a1 1 0 11-2 0V9H1a1 1 0 110-2h6V1a1 1 0 011-1z"/>
        </svg>
        A√±adir
      </button>
    </form>

    <!-- Active Reminders List -->
    <div id="active-reminders" class="active-reminders">
      <!-- Se llenar√° din√°micamente -->
    </div>

    <!-- Permission Notice -->
    <div id="notification-permission" class="permission-notice" style="display: none;">
      <p>üîî Activa las notificaciones para recibir recordatorios</p>
      <button id="request-permission-btn" class="permission-btn">Activar</button>
    </div>
  </div>
</div>

<style>
  .reminder-manager {
    margin: 0.5rem auto;
    max-width: 600px;
  }

  .reminder-compact-toggle {
    background: rgba(147, 51, 234, 0.15);
    border: 1px solid rgba(147, 51, 234, 0.3);
    border-radius: 8px;
    padding: 0.5rem;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    cursor: pointer;
    color: #c4b5fd;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
    font-family: inherit;
    min-width: 44px;
    justify-content: center;
  }

  .reminder-compact-toggle:hover {
    background: rgba(147, 51, 234, 0.25);
    border-color: rgba(147, 51, 234, 0.5);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(147, 51, 234, 0.3);
  }

  .reminder-icon {
    font-size: 1.1rem;
  }

  .toggle-arrow {
    transition: transform 0.3s ease;
  }

  .reminder-compact-toggle.collapsed .toggle-arrow {
    transform: rotate(-90deg);
  }

  .reminder-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: max-height 0.3s ease, opacity 0.3s ease, margin 0.3s ease;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(147, 51, 234, 0.1) 0%, rgba(79, 70, 229, 0.1) 100%);
    border: 1px solid rgba(147, 51, 234, 0.2);
    border-radius: 12px;
    padding: 1rem;
    margin-top: 0.5rem;
    backdrop-filter: blur(10px);
  }

  .reminder-content.collapsed {
    max-height: 0;
    opacity: 0;
    padding: 0;
    margin: 0;
    border: none;
  }

  /* Quick Reminders */
  .quick-reminders {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.5rem;
  }

  @media (max-width: 640px) {
    .quick-reminders {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .quick-btn {
    background: rgba(30, 30, 46, 0.8);
    border: 1px solid rgba(147, 51, 234, 0.3);
    border-radius: 12px;
    padding: 0.75rem 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #e9d5ff;
    font-size: 0.875rem;
  }

  .quick-btn:hover {
    background: rgba(147, 51, 234, 0.2);
    border-color: rgba(147, 51, 234, 0.5);
    transform: translateY(-2px);
  }

  .quick-btn:active {
    transform: translateY(0);
  }

  .quick-btn .icon {
    font-size: 1.5rem;
  }

  /* Custom Form */
  .custom-reminder-form {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: flex-end;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
    min-width: 120px;
    max-width: 150px;
  }

  .input-label {
    font-size: 0.875rem;
    color: #c4b5fd;
    font-weight: 500;
  }

  .time-input,
  .type-select {
    flex: 1;
    min-width: 100px;
    width: 100%;
    background: rgba(30, 30, 46, 0.8);
    border: 1px solid rgba(147, 51, 234, 0.3);
    border-radius: 8px;
    padding: 0.75rem;
    color: #e9d5ff;
    font-size: 0.95rem;
    box-sizing: border-box;
  }

  /* Alinear exactamente el ancho de la hora y el select en escritorio */
  .custom-reminder-form .time-input,
  .custom-reminder-form .type-select {
    width: 150px; /* fijo y consistente */
  }

  /* Asegurar la misma altura visual */
  .custom-reminder-form .time-input,
  .custom-reminder-form .type-select {
    height: 44px;
    line-height: 1.2;
  }

  .time-input::-webkit-calendar-picker-indicator {
    filter: invert(1);
    cursor: pointer;
  }

  .time-input:focus,
  .type-select:focus {
    outline: none;
    border-color: rgba(147, 51, 234, 0.6);
    box-shadow: 0 0 0 3px rgba(147, 51, 234, 0.1);
  }

  .add-btn {
    background: linear-gradient(135deg, #9333ea 0%, #4f46e5 100%);
    border: none;
    border-radius: 8px;
    padding: 0.75rem 1.25rem;
    color: white;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .add-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(147, 51, 234, 0.4);
  }

  /* Active Reminders */
  .active-reminders {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-height: 300px;
    overflow-y: auto;
  }

  .reminder-item {
    background: rgba(30, 30, 46, 0.6);
    border: 1px solid rgba(147, 51, 234, 0.2);
    border-radius: 12px;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    animation: slideIn 0.3s ease;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .reminder-item:hover {
    background: rgba(30, 30, 46, 0.8);
    border-color: rgba(147, 51, 234, 0.4);
  }

  .reminder-info {
    flex: 1;
  }

  .reminder-title {
    color: #e9d5ff;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    font-size: 0.95rem;
  }

  .reminder-time {
    color: #a78bfa;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    width: fit-content;
  }

  .reminder-actions {
    display: flex;
    gap: 0.5rem;
  }

  .snooze-btn,
  .delete-btn {
    background: rgba(147, 51, 234, 0.2);
    border: none;
    border-radius: 8px;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .snooze-btn:hover {
    background: rgba(147, 51, 234, 0.3);
    transform: scale(1.1);
  }

  .delete-btn {
    background: rgba(239, 68, 68, 0.2);
  }

  .delete-btn:hover {
    background: rgba(239, 68, 68, 0.3);
    transform: scale(1.1);
  }

  /* Permission Notice */
  .permission-notice {
    background: rgba(234, 179, 8, 0.1);
    border: 1px solid rgba(234, 179, 8, 0.3);
    border-radius: 12px;
    padding: 1rem;
    text-align: center;
  }

  .permission-notice p {
    margin: 0 0 0.75rem 0;
    color: #fef3c7;
  }

  .permission-btn {
    background: linear-gradient(135deg, #eab308 0%, #f59e0b 100%);
    border: none;
    border-radius: 8px;
    padding: 0.5rem 1.5rem;
    color: #111;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .permission-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(234, 179, 8, 0.4);
  }

  /* Scrollbar */
  .active-reminders::-webkit-scrollbar {
    width: 8px;
  }

  .active-reminders::-webkit-scrollbar-track {
    background: rgba(30, 30, 46, 0.4);
    border-radius: 4px;
  }

  .active-reminders::-webkit-scrollbar-thumb {
    background: rgba(147, 51, 234, 0.4);
    border-radius: 4px;
  }

  .active-reminders::-webkit-scrollbar-thumb:hover {
    background: rgba(147, 51, 234, 0.6);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .reminder-manager {
      margin: 0.5rem auto;
    }

    .reminder-compact-toggle {
      padding: 0.4rem 0.6rem;
      font-size: 0.8rem;
    }

    .reminder-icon {
      font-size: 0.9rem;
    }

    .reminder-text {
      font-size: 0.75rem;
    }

    .reminder-content {
      padding: 0.75rem;
    }

    .quick-reminders {
      grid-template-columns: repeat(2, 1fr);
    }

    .custom-reminder-form {
      flex-direction: column;
      align-items: stretch;
    }

    .input-group {
      width: 100%;
      min-width: unset;
      max-width: none;
      flex: none;
    }


    .time-input,
    .type-select {
      width: 100%; /* En m√≥vil, ambos ocupan 100% y se ven id√©nticos */
      min-width: unset;
      padding: 0.75rem;
      font-size: 0.95rem;
    }


    .add-btn {
      width: 100%;
      justify-content: center;
      padding: 0.75rem;
    }
  }
</style>
