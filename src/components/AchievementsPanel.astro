      <div id="current-challenge-content" class="challenge-content">
        <div class="challenge-card">
          <div class="challenge-info">
            <h5 id="challenge-title">Racha de 7 d√≠as</h5>
            <p id="challenge-description">Completa tu rutina 7 d√≠as seguidos</p>
          </div>
          <div class="challenge-progress">
            <div class="progress-bar">
              <div id="challenge-progress-fill" class="progress-fill" style="width: 0%"></div>
