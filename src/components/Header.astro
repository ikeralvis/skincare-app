<header class="main-header">
  <div class="header-content">
    <div class="header-top">
      <div class="logo-container">
        <img src="/images/logo.png" alt="Skincare Logo" class="logo-img" />
      </div>
      <button id="user-menu-btn" class="user-menu-btn" title="Cuenta">
        
      </button>
    </div>
    <nav class="main-nav">
      <button class="nav-link active" data-view="guide">Gu铆a</button>
      <button class="nav-link" data-view="calendar">Calendario</button>
      
      <!-- Bot贸n circular de Chat IA -->
      <button class="chat-ai-btn nav-link" data-view="chat" title="Chat con IA">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          <circle cx="12" cy="11" r="1" fill="currentColor"/>
          <circle cx="8" cy="11" r="1" fill="currentColor"/>
          <circle cx="16" cy="11" r="1" fill="currentColor"/>
        </svg>
      </button>
      
      <button class="nav-link" data-view="progress">Progreso</button>
      <button class="nav-link" data-view="routines">Rutinas</button>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const userMenuBtn = document.getElementById('user-menu-btn');
    if (!userMenuBtn) return;

    userMenuBtn.addEventListener('click', () => {
      const authApi = (window as any).authModal;
      const isAuth = !!(authApi && typeof authApi.isAuthenticated === 'function' && authApi.isAuthenticated());

      if (isAuth) {
        // Si est谩 autenticado, mostrar solo el popup de cierre de sesi贸n
        const logoutModal = document.getElementById('logout-modal');
        if (logoutModal) logoutModal.classList.remove('hidden');
      } else {
        // Si no est谩 autenticado, mostrar el modal completo de autenticaci贸n
        const authModal = document.getElementById('auth-modal');
        if (authModal) authModal.classList.remove('hidden');
      }
    });

  });
</script>

<style>
  .main-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 1rem 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    z-index: 50;
    color: white;
  }

  .header-content {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centra los hijos horizontalmente */
    width: 100%;
    max-width: 600px;
    padding: 0 1.5rem;
  }
  
  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding-bottom: 1rem;
  }
  
  .logo-container {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .logo-img {
    width: 50px;
    height: 50px;
  }
  
  .user-menu-btn {
    background: rgba(0, 255, 255, 0.2);
    border: 2px solid #00ffff;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    font-size: 1.3rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .user-menu-btn:hover {
    background: rgba(0, 255, 255, 0.4);
    transform: scale(1.1);
  }
  
  .main-nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    background: none;
    border: none;
    padding: 0;
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    cursor: pointer;
    color: white;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s, color 0.3s;
  }
  
  .nav-link.active {
    opacity: 1;
    font-weight: bold;
    color: #00ffff;
  }
  
  .nav-link:hover {
    opacity: 1;
  }

  /* Bot贸n circular de Chat IA */
  .chat-ai-btn {
    background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
    border: 2px solid #ff6b6b;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
    position: relative;
    animation: pulse-glow 2s ease-in-out infinite;
  }

  .chat-ai-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(255, 107, 107, 0.5);
  }

  .chat-ai-btn:active {
    transform: scale(1.05);
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
    }
    50% {
      box-shadow: 0 6px 25px rgba(255, 107, 107, 0.6);
    }
  }

  /* Ocultar header en m贸vil - solo usar bottom nav */
  @media (max-width: 768px) {
    .main-header {
      display: none;
    }
  }
</style>