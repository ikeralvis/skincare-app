<header class="main-header">
  <div class="header-content">
    <div class="logo-container">
      <img src="/images/logo.png" alt="Skincare Logo" class="logo-img" />
    </div>
    <nav class="main-nav">
      <button class="nav-link active" data-view="guide">Guía</button>
      <button class="nav-link" data-view="calendar">Calendario</button>
    </nav>
  </div>
</header>

<style>
  .main-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 1rem 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    z-index: 50;
    color: white;
  }

  .header-content {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centra los hijos horizontalmente */
    width: 100%;
    max-width: 600px;
    padding: 0 1.5rem;
  }
  
  .logo-container {
    padding-bottom: 1rem; /* Espacio entre el logo y la navegación */
  }

  .logo-img {
    width: 50px;
    height: 50px;
  }
  
  .main-nav {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    background: none;
    border: none;
    padding: 0;
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    cursor: pointer;
    color: white;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s, color 0.3s;
  }
  
  .nav-link.active {
    opacity: 1;
    font-weight: bold;
    color: #00ffff;
  }
  
  .nav-link:hover {
    opacity: 1;
  }
</style>