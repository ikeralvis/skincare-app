---
import { dailyRoutine, weeklyRoutine } from '../data/routines';

const days = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"];

// Formatear el día actual para que coincida con las claves de weeklyRoutine (ej: "Lunes")
const todayFull = new Date().toLocaleDateString('es-ES', { weekday: 'long', timeZone: 'Europe/Madrid' });
const capitalizedToday = todayFull.charAt(0).toUpperCase() + todayFull.slice(1);
---

<div class="calendar-container">
  <div class="days-of-week">
    {days.map(day => (
      <button 
        class={`day-button ${day === capitalizedToday ? 'active' : ''}`} 
        data-day={day.toLowerCase()}
      >
        {day.slice(0, 1)}
      </button>
    ))}
  </div>
  <div class="daily-routine-display">
    <div class="routine-section">
      <h3 class="routine-title">PROTOCOLO DIURNO</h3>
      <div class="routine-products-container">
        {dailyRoutine.map(product => (
          <div class="calendar-product">
            <img src={product.image} alt={product.accessCode} />
            <p>{product.accessCode}</p>
          </div>
        ))}
      </div>
    </div>
    <div class="routine-section">
      <h3 class="routine-title">PROTOCOLO NOCTURNO</h3>
      <div class="nightly-routines-wrapper">
        {days.map(day => {
          const routine = weeklyRoutine[day as keyof typeof weeklyRoutine];
          return (
            <div 
              id={`nightly-products-${day.toLowerCase()}`} 
              class={`nightly-products-container ${day !== capitalizedToday ? 'ocultar' : ''}`}
            >
              {routine.map(product => (
                <div class="calendar-product">
                  <img src={product.image} alt={product.accessCode} />
                  <p>{product.accessCode}</p>
                </div>
              ))}
            </div>
          );
        })}
      </div>
    </div>
  </div>
</div>

<style>
  .ocultar {
    display: none !important;
  }
  .calendar-container {
    padding-top: 2rem;
  }
  .days-of-week {
    display: flex;
    justify-content: space-around;
    margin-bottom: 1.5rem;
  }
  .day-button {
    background: none;
    border: 2px solid #00ffff;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
  }
  .day-button:hover {
    background-color: rgba(0, 255, 255, 0.2);
  }
  .day-button.active {
    background-color: #00ffff;
    color: black;
  }
  .routine-section {
    margin-bottom: 2rem;
  }
  .routine-title {
    font-family: 'Phatt', sans-serif;
    color: #00ffff;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }
  .routine-products-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .nightly-products-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .calendar-product {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
  }
  .calendar-product img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 50%;
  }
  .calendar-product p {
    margin: 0;
    font-size: 1rem;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.day-button');
    const allNightlyRoutines = document.querySelectorAll('.nightly-products-container');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const day = button.dataset.day;

        // Quitar la clase 'active' de todos los botones
        buttons.forEach(btn => btn.classList.remove('active'));
        // Ocultar todas las rutinas de noche
        allNightlyRoutines.forEach(routine => routine.classList.add('ocultar'));

        // Añadir la clase 'active' al botón clickeado
        button.classList.add('active');

        // Mostrar la rutina del día correspondiente
        const routineToShow = document.querySelector(`#nightly-products-${day}`);
        if (routineToShow) {
          routineToShow.classList.remove('ocultar');
        }
      });
    });
  });
</script>