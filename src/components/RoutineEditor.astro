  // Cambiar tab de imagen
  function switchImageTab(tabName: string) {
    const tabs = document.querySelectorAll('.image-tab');
    const contents = document.querySelectorAll('.image-tab-content');
    
    tabs.forEach(t => {
      if ((t as HTMLElement).dataset.imageTab === tabName) {
        t.classList.add('active');
      } else {
        t.classList.remove('active');
      }
    });

    contents.forEach(c => {
      if (c.id === `image-${tabName}-tab`) {
        c.classList.add('active');
      } else {
        c.classList.remove('active');
      }
    });
  }

  // Convertir archivo a base64
  function fileToBase64(file: File): Promise<string> {
    return new Promise((resolve, reject) => {
      const reader = new FileReader();
      reader.onload = () => resolve(reader.result as string);
      reader.onerror = reject;
      reader.readAsDataURL(file);
    });
  }

  // Actualizar preview de imagen
  function updateImagePreview(imageSrc: string) {
    const preview = document.getElementById('image-preview') as HTMLImageElement;
    if (preview && imageSrc) {
      preview.src = imageSrc;
      preview.style.display = 'block';
    }
  }

  // Variables para la c√°mara
  let cameraStream: MediaStream | null = null;

  // Abrir c√°mara
  async function openCamera() {
    try {
      const video = document.getElementById('camera-preview') as HTMLVideoElement;
      const btnCapture = document.getElementById('btn-capture-photo') as HTMLButtonElement;
      
      cameraStream = await navigator.mediaDevices.getUserMedia({ 
        video: { facingMode: 'environment' } // C√°mara trasera en m√≥vil
      });
      
      video.srcObject = cameraStream;
      video.style.display = 'block';
      btnCapture.style.display = 'block';
    } catch (error) {
      alert('‚ùå No se pudo acceder a la c√°mara. Verifica los permisos.');
      console.error('Error accediendo a la c√°mara:', error);
    }
  }

  // Capturar foto
  function capturePhoto() {
    const video = document.getElementById('camera-preview') as HTMLVideoElement;
    const canvas = document.getElementById('camera-canvas') as HTMLCanvasElement;
    const context = canvas.getContext('2d');
    
    if (!context) return;

    // Configurar tama√±o del canvas
    canvas.width = video.videoWidth;
    canvas.height = video.videoHeight;
    
    // Dibujar el frame actual del video en el canvas
    context.drawImage(video, 0, 0);
    
    // Convertir a base64
    const imageData = canvas.toDataURL('image/jpeg', 0.8);
    
    // Actualizar preview y campo oculto
    updateImagePreview(imageData);
    (document.getElementById('product-image') as HTMLInputElement).value = imageData;
    
    // Cerrar c√°mara
    closeCameraStream();
    video.style.display = 'none';
    (document.getElementById('btn-capture-photo') as HTMLButtonElement).style.display = 'none';
  }

  // Cerrar stream de c√°mara
  function closeCameraStream() {
    if (cameraStream) {
      cameraStream.getTracks().forEach(track => track.stop());
      cameraStream = null;
    }
  }

  // Cambiar de tab
  function switchTab(tab: 'daily' | 'nightly') {
    currentTab = tab;
    
    // Actualizar botones
    const tabButtons = document.querySelectorAll('.tab-button');
    tabButtons.forEach(button => {
      if ((button as HTMLElement).dataset.tab === tab) {
        button.classList.add('active');
      } else {
        button.classList.remove('active');
      }
    });

    // Actualizar contenido
    const dailyTab = document.getElementById('daily-tab');
    const nightlyTab = document.getElementById('nightly-tab');
    
    if (tab === 'daily') {
      dailyTab?.classList.add('active');
      nightlyTab?.classList.remove('active');
    } else {
      dailyTab?.classList.remove('active');
      nightlyTab?.classList.add('active');
    }

    renderProducts();
  }

  // Renderizar productos
  function renderProducts() {
    if (!currentRoutineData) return;

    if (currentTab === 'daily') {
      renderDailyProducts();
    } else {
      renderNightlyProducts();
    }
  }

  // Renderizar productos diurnos
  function renderDailyProducts() {
    const container = document.getElementById('daily-products-list');
    if (!container || !currentRoutineData) return;

    const products = currentRoutineData.dailyRoutine
      .filter(p => p.enabled)
      .sort((a, b) => a.step - b.step);

    if (products.length === 0) {
      container.innerHTML = '<p style="text-align:center;opacity:0.7;color:#ccc;">No hay productos en la rutina diurna. ¬°A√±ade uno!</p>';
      return;
    }

    container.innerHTML = products.map(product => `
      <div class="product-card" data-id="${product.id}">
        <div class="step-badge">${product.step}</div>
        <img src="${product.image}" alt="${product.accessCode}" class="product-image" />
        <div class="card-content">
          <h2 class="card-title">${product.title || product.accessCode}</h2>
          <h3 class="access-code">C√≥digo de Acceso: ${product.accessCode}</h3>
          <p class="card-function"><strong>Funci√≥n:</strong> ${product.function || 'N/A'}</p>
          <p class="card-usage"><strong>Modo de Empleo:</strong> ${product.usage || 'N/A'}</p>
        </div>
        <div class="card-actions">
          <button class="btn-edit" data-id="${product.id}" title="Editar">‚úèÔ∏è</button>
          <button class="btn-delete" data-id="${product.id}" title="Eliminar">üóëÔ∏è</button>
        </div>
      </div>
    `).join('');

    // A√±adir event listeners
    container.querySelectorAll('.btn-edit').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.currentTarget as HTMLElement).dataset.id!;
        editProduct(id);
      });
    });

    container.querySelectorAll('.btn-delete').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.currentTarget as HTMLElement).dataset.id!;
        deleteProduct(id);
      });
    });
  }

  // Renderizar productos nocturnos - Mostrar TODOS los productos √∫nicos
  function renderNightlyProducts() {
    const container = document.getElementById('nightly-products-list');
    if (!container || !currentRoutineData) return;

    // Obtener TODOS los productos nocturnos √∫nicos (por accessCode)
    const allNightProducts: Product[] = [];
    const seenAccessCodes = new Set<string>();
    
    // Recopilar todos los productos √∫nicos de todos los d√≠as
    Object.values(currentRoutineData.nightlyRoutines).forEach(dayProducts => {
      dayProducts.forEach(product => {
        if (product.enabled && !seenAccessCodes.has(product.accessCode)) {
          seenAccessCodes.add(product.accessCode);
          allNightProducts.push(product);
        }
      });
    });

    // Ordenar por step
    allNightProducts.sort((a, b) => a.step - b.step);

    if (allNightProducts.length === 0) {
      container.innerHTML = '<p style="text-align:center;opacity:0.7;color:#ccc;">No hay productos nocturnos. ¬°A√±ade uno!</p>';
      return;
    }

    // Para cada producto, determinar en qu√© d√≠as est√° presente
    container.innerHTML = allNightProducts.map(product => {
      const days: string[] = [];
      const dayNames = ['Lunes', 'Martes', 'Mi√©rcoles', 'Jueves', 'Viernes', 'S√°bado', 'Domingo'];
      
      dayNames.forEach(day => {
        const dayHasProduct = currentRoutineData!.nightlyRoutines[day]?.some(
          p => p.accessCode === product.accessCode && p.enabled
        );
        if (dayHasProduct) {
          days.push(day.charAt(0)); // L, M, X, J, V, S, D
        }
      });

      const daysDisplay = days.length > 0 ? days.join(' ') : 'Ning√∫n d√≠a';

      return `
        <div class="product-card" data-id="${product.id}">
          <div class="step-badge">${product.step}</div>
          <img src="${product.image}" alt="${product.accessCode}" class="product-image" />
          <div class="card-content">
            <h2 class="card-title">${product.title || product.accessCode}</h2>
            <h3 class="access-code">C√≥digo de Acceso: ${product.accessCode}</h3>
            <p class="card-days"><strong>D√≠as:</strong> <span class="days-badges">${daysDisplay}</span></p>
            <p class="card-function"><strong>Funci√≥n:</strong> ${product.function || 'N/A'}</p>
            <p class="card-usage"><strong>Modo de Empleo:</strong> ${product.usage || 'N/A'}</p>
          </div>
          <div class="card-actions">
            <button class="btn-edit" data-id="${product.id}" title="Editar">‚úèÔ∏è</button>
            <button class="btn-delete" data-id="${product.id}" title="Eliminar">üóëÔ∏è</button>
          </div>
        </div>
      `;
    }).join('');

    // A√±adir event listeners
    container.querySelectorAll('.btn-edit').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.currentTarget as HTMLElement).dataset.id!;
        editProduct(id);
      });
    });

    container.querySelectorAll('.btn-delete').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.currentTarget as HTMLElement).dataset.id!;
        deleteProduct(id);
      });
    });
  }

  // Abrir modal para crear/editar producto
  function openProductModal(routineType: 'day' | 'night', product?: Product) {
    const modal = document.getElementById('product-modal');
    const modalTitle = document.getElementById('modal-title');
    const daysGroup = document.getElementById('days-group');
    
    if (!modal) return;

    currentEditingProduct = product || null;
    
    // Configurar t√≠tulo
    if (modalTitle) {
      modalTitle.textContent = product ? 'Editar Producto' : 'Nuevo Producto';
    }

    // Mostrar selector de d√≠as solo para rutinas nocturnas
    if (daysGroup) {
      daysGroup.style.display = routineType === 'night' ? 'block' : 'none';
    }

    // Rellenar formulario
    const form = document.getElementById('product-form') as HTMLFormElement;
    if (form) {
      (document.getElementById('product-id') as HTMLInputElement).value = product?.id || '';
      (document.getElementById('product-routine-type') as HTMLInputElement).value = routineType;
      (document.getElementById('product-access-code') as HTMLInputElement).value = product?.accessCode || '';
      (document.getElementById('product-title') as HTMLInputElement).value = product?.title || '';
      (document.getElementById('product-function') as HTMLTextAreaElement).value = product?.function || '';
      (document.getElementById('product-usage') as HTMLTextAreaElement).value = product?.usage || '';
      (document.getElementById('product-image') as HTMLInputElement).value = product?.image || '';
      (document.getElementById('product-step') as HTMLInputElement).value = product?.step.toString() || '1';

      // Actualizar preview de imagen si existe
      if (product?.image) {
        updateImagePreview(product.image);
        // Tambi√©n rellenar el campo de URL si parece una URL
        if (product.image.startsWith('http') || product.image.startsWith('/')) {
          (document.getElementById('product-image-url') as HTMLInputElement).value = product.image;
        }
      } else {
        // Limpiar preview
        const preview = document.getElementById('image-preview') as HTMLImageElement;
        if (preview) preview.style.display = 'none';
        (document.getElementById('product-image-url') as HTMLInputElement).value = '';
      }

      // Si es edici√≥n de producto nocturno, marcar d√≠as donde aparece
      if (product && routineType === 'night') {
        const checkboxes = form.querySelectorAll('input[name="day"]') as NodeListOf<HTMLInputElement>;
        checkboxes.forEach(cb => {
          cb.checked = false;
        });
        // Determinar qu√© d√≠as tienen este producto (buscar por accessCode)
        Object.keys(currentRoutineData!.nightlyRoutines).forEach(day => {
          if (currentRoutineData!.nightlyRoutines[day].some(p => p.accessCode === product.accessCode)) {
            const checkbox = form.querySelector(`input[name="day"][value="${day}"]`) as HTMLInputElement;
            if (checkbox) checkbox.checked = true;
          }
        });
      } else if (routineType === 'night') {
        // Nuevo producto nocturno: marcar TODOS los d√≠as por defecto
        const checkboxes = form.querySelectorAll('input[name="day"]') as NodeListOf<HTMLInputElement>;
        checkboxes.forEach(cb => {
          cb.checked = true; // Todos los d√≠as marcados por defecto
        });
      }
    }

    modal.classList.remove('hidden');
  }

  // Cerrar modal
  function closeProductModal() {
    const modal = document.getElementById('product-modal');
    if (modal) {
      modal.classList.add('hidden');
    }
    currentEditingProduct = null;
    
    // Cerrar c√°mara si est√° abierta
    closeCameraStream();
    const video = document.getElementById('camera-preview') as HTMLVideoElement;
    const btnCapture = document.getElementById('btn-capture-photo') as HTMLButtonElement;
    if (video) video.style.display = 'none';
    if (btnCapture) btnCapture.style.display = 'none';
    
    // Limpiar preview
    const preview = document.getElementById('image-preview') as HTMLImageElement;
    if (preview) preview.style.display = 'none';
  }

  // Manejar env√≠o del formulario
  async function handleFormSubmit(e: Event) {
    e.preventDefault();
    
    if (isLoading) return;
    
    const form = e.target as HTMLFormElement;
    const id = (document.getElementById('product-id') as HTMLInputElement).value;
    const routineType = (document.getElementById('product-routine-type') as HTMLInputElement).value as 'day' | 'night';
    
    const product: Product = {
      id: id || `${routineType}-${Date.now()}`,
      step: parseInt((document.getElementById('product-step') as HTMLInputElement).value),
      title: (document.getElementById('product-title') as HTMLInputElement).value,
      accessCode: (document.getElementById('product-access-code') as HTMLInputElement).value,
      function: (document.getElementById('product-function') as HTMLTextAreaElement).value,
      usage: (document.getElementById('product-usage') as HTMLTextAreaElement).value,
      image: (document.getElementById('product-image') as HTMLInputElement).value,
      routineType: routineType,
      frequency: routineType === 'day' ? 'daily' : 'custom',
      enabled: true,
    };

    if (routineType === 'day') {
      await saveDailyProduct(product);
    } else {
      await saveNightlyProduct(product, form);
    }

    closeProductModal();
    await renderProducts();
  }

  // Guardar producto diurno
  async function saveDailyProduct(product: Product) {
    if (!currentRoutineData) return;

    const index = currentRoutineData.dailyRoutine.findIndex(p => p.id === product.id);
    
    if (index >= 0) {
      // Editar existente
      currentRoutineData.dailyRoutine[index] = product;
    } else {
      // A√±adir nuevo
      currentRoutineData.dailyRoutine.push(product);
    }

    await saveRoutinesToFirebase(currentRoutineData);
  }

  // Guardar producto nocturno
  async function saveNightlyProduct(product: Product, form: HTMLFormElement) {
    if (!currentRoutineData) return;

    const selectedDays: string[] = [];
    const checkboxes = form.querySelectorAll('input[name="day"]:checked') as NodeListOf<HTMLInputElement>;
    checkboxes.forEach(cb => selectedDays.push(cb.value));

    // Si estamos editando, eliminar por accessCode en TODOS los d√≠as (no por id)
    if (currentEditingProduct) {
      const accessToRemove = currentEditingProduct.accessCode || product.accessCode;
      Object.keys(currentRoutineData.nightlyRoutines).forEach(day => {
        currentRoutineData!.nightlyRoutines[day] =
          currentRoutineData!.nightlyRoutines[day].filter(p => p.accessCode !== accessToRemove);
      });
    }

    // Si no hay d√≠as seleccionados y estamos editando, esto significa "quitar de todos los d√≠as".
    // Guardar y salir.
    if (selectedDays.length === 0) {
      await saveRoutinesToFirebase(currentRoutineData);
      return;
    }

    // A√±adir el producto a los d√≠as seleccionados con IDs √∫nicos por d√≠a
    selectedDays.forEach(day => {
      if (!currentRoutineData!.nightlyRoutines[day]) {
        currentRoutineData!.nightlyRoutines[day] = [];
      }
      const uniqueId = `night-${day}-${Date.now()}-${Math.random().toString(36).slice(2,7)}`;
      currentRoutineData!.nightlyRoutines[day].push({
        ...product,
        id: uniqueId,
        routineType: 'night',
        frequency: 'custom',
        enabled: true,
      });
    });

    await saveRoutinesToFirebase(currentRoutineData);
  }

  // Editar producto
  function editProduct(id: string) {
    if (!currentRoutineData) return;

    let product: Product | undefined;

    if (currentTab === 'daily') {
      product = currentRoutineData.dailyRoutine.find(p => p.id === id);
      if (product) openProductModal('day', product);
    } else {
      // Buscar el producto nocturno en todos los d√≠as, ya que el listado muestra todos
      let foundDay: string | null = null;
      for (const day of Object.keys(currentRoutineData.nightlyRoutines)) {
        const p = currentRoutineData.nightlyRoutines[day].find(p => p.id === id);
        if (p) {
          product = p;
          foundDay = day;
          break;
        }
      }
      if (product) {
        // Opcional: fijar el d√≠a seleccionado al d√≠a donde se encontr√≥, si us√°ramos ese estado m√°s adelante
        if (foundDay) selectedDay = foundDay;
        openProductModal('night', product);
      }
    }
  }

  // Eliminar producto
  async function deleteProduct(id: string) {
    if (!currentRoutineData) return;

    if (!confirm('¬øSeguro que quieres eliminar este producto?')) return;

    if (currentTab === 'daily') {
      currentRoutineData.dailyRoutine = currentRoutineData.dailyRoutine.filter(p => p.id !== id);
    } else {
      // Eliminar de todos los d√≠as
      Object.keys(currentRoutineData.nightlyRoutines).forEach(day => {
        currentRoutineData!.nightlyRoutines[day] = 
          currentRoutineData!.nightlyRoutines[day].filter(p => p.id !== id);
      });
    }

    await saveRoutinesToFirebase(currentRoutineData);
    await renderProducts();
  }

  // Inicializar cuando el componente cargue
  document.addEventListener('DOMContentLoaded', async () => {
    // Esperar a que se inicialice la autenticaci√≥n
    const user = await waitForAuth();
    isAuthenticated = !!user;

    // Esperar a que la vista sea visible
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
          const routinesView = document.getElementById('routines-view');
          if (routinesView && !routinesView.classList.contains('hidden') && isAuthenticated) {
            initRoutineEditor();
            observer.disconnect();
          }
        }
      });
    });

    const routinesView = document.getElementById('routines-view');
    if (routinesView) {
      observer.observe(routinesView, { attributes: true });
      
      // Si ya est√° visible y autenticado, inicializar inmediatamente
      if (!routinesView.classList.contains('hidden') && isAuthenticated) {
        initRoutineEditor();
      }
    }

    // Escuchar cambios de autenticaci√≥n
    window.addEventListener('auth-changed', async (e: any) => {
      isAuthenticated = !!e.detail?.user;
      if (isAuthenticated && !routinesView?.classList.contains('hidden')) {
        await initRoutineEditor();
      }
    });
  });

  // Exponer funciones globalmente para debugging
  if (typeof window !== 'undefined') {
    (window as any).routineEditor = {
      initRoutineEditor,
      getCurrentData: () => currentRoutineData,
    };
  }
