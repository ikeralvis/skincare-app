<script>
  // L√≥gica del cliente para el editor de rutinas con Firebase
  import type { Product, RoutineData } from '../types/routine';
  import { getRoutines, saveRoutines, createEmptyRoutineData, getCurrentUser, waitForAuth } from '../utils/firebase';

  // Estado global
  let currentRoutineData: RoutineData | null = null;
  let currentEditingProduct: Product | null = null;
  let currentTab: 'daily' | 'nightly' = 'daily';
  let selectedDay: string = 'Lunes';
  let isLoading = false;
  let isAuthenticated = false;

  // Cargar rutinas desde Firebase
  async function loadRoutinesFromFirebase(): Promise<RoutineData> {
    try {
      // Verificar autenticaci√≥n
      const user = getCurrentUser();
      if (!user) {
        showAuthRequired();
        return createEmptyRoutineData();
      }

      const data = await getRoutines();
      if (!data) {
        // Si no hay datos, crear estructura vac√≠a
        return createEmptyRoutineData();
      }
      return data;
    } catch (error) {
      console.error('Error cargando rutinas:', error);
      return createEmptyRoutineData();
    }
  }

  // Mostrar mensaje de autenticaci√≥n requerida
  function showAuthRequired() {
    const container = document.querySelector('.routine-editor-container');
    if (container) {
      const authWarning = document.createElement('div');
      authWarning.className = 'auth-warning';
      authWarning.innerHTML = `
        <p style="text-align:center;color:#ff5555;padding:2rem;">
          üîí Debes iniciar sesi√≥n para gestionar tus rutinas
        </p>
      `;
      container.insertBefore(authWarning, container.firstChild);
    }
  }

  // Guardar rutinas en Firebase
  async function saveRoutinesToFirebase(data: RoutineData): Promise<void> {
    try {
      const user = getCurrentUser();
      if (!user) {
        alert('üîí Debes iniciar sesi√≥n para guardar cambios');
        return;
      }

      await saveRoutines(data);
      // Disparar evento personalizado para que otras partes de la app se actualicen
      window.dispatchEvent(new CustomEvent('routines-updated', { detail: data }));
    } catch (error) {
      console.error('Error guardando rutinas:', error);
      alert('‚ùå Error al guardar. Por favor, intenta de nuevo.');
      throw error;
    }
  }

