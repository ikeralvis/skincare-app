---
const { step, title, accessCode, function: func, usage, image } = Astro.props;
---
<div class="product-card">
  <div class="step-badge">{step}</div>
  <img src={image} alt={accessCode} class="product-image">
  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <h3 class="access-code">Código de Acceso: {accessCode}</h3>
    <p class="card-function">
      <strong>Función:</strong> {func}
    </p>
    <p class="card-usage">
      <strong>Modo de Empleo:</strong> {usage}
    </p>
  </div>
</div>

<style>
  @font-face {
    font-family: 'Phatt';
    src: url('/src/fonts/PHATP___.TTF') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  .product-card {
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    padding: 1.5rem;
    margin: 1rem 0;
    color: white;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1.5rem;
    position: relative;
  }
  h2.card-title{
    letter-spacing: 0.09em;
  }
  .step-badge {
    position: absolute;
    top: -10px;
    left: -10px;
    background-color: #00ffff;
    color: black;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    font-size: 1.2rem;
  }
  .product-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid #00ffff;
  }
  .card-content {
    flex-grow: 1;
  }
  .card-title {
    font-family: 'Phatt', sans-serif;
    font-size: 1.5rem;
    margin: 0;
    width: 95%;
  }
  .access-code {
    font-size: 1rem;
    font-style: italic;
    opacity: 0.7;
    margin: 0.5rem 0;
  }
  .card-function,
  .card-usage {
    font-size: 1rem;
    line-height: 1.4;
    margin: 0.5rem 0;
    opacity: 0.9;
  }
</style>